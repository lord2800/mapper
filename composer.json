{
    "name": "mapper/mapper",
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.7",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "Mapper\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "phpunit": "phpunit",
        "static-analysis": "psalm",
        "code-style": "phpcs --standard=PSR12 src tests",
        "test": ["@code-style", "@static-analysis", "@phpunit"]
    }
}
